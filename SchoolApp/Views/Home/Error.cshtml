@model SchoolApp.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
    <p class="lead">An unexpected error occurred. Our team has been notified.</p>

    @if (Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
</div>